---
import Layout from "../layouts/Layout.astro";
import AudioVisualizer from "../components/Visions/AudioVisualizer.svelte";

const visionsSchema = {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    name: "Visions",
    url: Astro.url.toString(),
    applicationCategory: "CreativeWorkApplication",
    operatingSystem: "All",
    description:
        "Browser-based audio visualizer that you can drop any audio file into.",
    creator: {
        "@type": "Organization",
        name: "LaTeX 4000",
    },
};

const visionsBreadcrumbs = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: new URL("/", Astro.url).toString(),
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "Visions",
            item: Astro.url.toString(),
        },
    ],
};
---

<Layout
    title="Visions"
    description="Are you seeing things? Are you hearing things? Are you feeling things? Are you having visions?"
>
    <script
        is:inline
        type="application/ld+json"
        set:html={JSON.stringify(visionsSchema)}
    />
    <script
        is:inline
        type="application/ld+json"
        set:html={JSON.stringify(visionsBreadcrumbs)}
    />
    <AudioVisualizer client:only="svelte" />
</Layout>
