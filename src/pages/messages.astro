---
import Layout from "../layouts/Layout.astro";
import MessageGraph from "../components/Messages/MessageGraph.svelte";
import MessageHeatmap from "../components/Messages/MessageHeatmap.svelte";
---

<Layout
    header="Message Charts | Updated: 2025-11-02"
    title="Message Charts"
    description="Charts of messages sent in the server"
>
    <div>
        <div class="messageOptions">
            <label for="chartType">Chart type:</label>
            <select
                id="chartType"
                aria-label="Select chart type"
                aria-controls="graphContainer heatmapContainer"
            >
                <option value="graph">Graph</option>
                <option value="heatmap">Heatmap</option>
            </select>
        </div>

        <div
            id="graphContainer"
            role="region"
            aria-label="Message graph view"
            aria-hidden="false"
        >
            <MessageGraph client:visible />
        </div>

        <div
            id="heatmapContainer"
            role="region"
            aria-label="Message heatmap view"
            aria-hidden="true"
            style="display: none;"
        >
            <MessageHeatmap client:visible />
        </div>
    </div>

    <script is:inline>
        const selectElem = document.getElementById("chartType");
        const graphContainer = document.getElementById("graphContainer");
        const heatmapContainer = document.getElementById("heatmapContainer");

        selectElem.addEventListener("change", (event) => {
            const selected = event.target.value;
            if (selected === "graph") {
                graphContainer.style.display = "block";
                heatmapContainer.style.display = "none";
                graphContainer.setAttribute("aria-hidden", "false");
                heatmapContainer.setAttribute("aria-hidden", "true");
            } else {
                graphContainer.style.display = "none";
                heatmapContainer.style.display = "block";
                graphContainer.setAttribute("aria-hidden", "true");
                heatmapContainer.setAttribute("aria-hidden", "false");
            }
        });
    </script>
</Layout>

<style>
    .messageOptions {
        margin-bottom: var(--line-height);
        display: flex;
        flex-direction: column;
        gap: var(--line-height);
    }
</style>
